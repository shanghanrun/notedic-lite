{
  "manifest_version": 3,
  "name": "한의학 퀵 검색기",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "검색창 열기"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://hani.chois.cloud/*"],
      "js": ["content_script.js"],
      "run_at": "document_start" 
    }
  ]
}